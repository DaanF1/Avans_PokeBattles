<Window x:Class="Avans_PokeBattles.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avans_PokeBattles.Client"
        mc:Ignorable="d"
        Title="Login" Height="100" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <TextBox x:Name="txtName" 
                 Margin="0,-25,0,0" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 TextWrapping="NoWrap"  
                 Width="150" 
                 Height="20"  
                 Text="Enter your name..." />
        <Button x:Name="btnLogin" 
                Margin="0,25,0,0" 
                Content="Login" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="150" 
                Height="20" 
                Click="btnLogin_Clicked"/>
    </Grid>
</Window>