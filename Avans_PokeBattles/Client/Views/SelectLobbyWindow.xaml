<Window x:Class="Avans_PokeBattles.Client.SelectLobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avans_PokeBattles.Client"
        mc:Ignorable="d"
        Title="Select a Lobby" Height="160" Width="200" Loaded="SelectLobbyWindow_Loaded" ResizeMode="NoResize" >
    <Grid>
        <Label Name="lblName" Content="Name: " Width="135" Height="25" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" />
        <Button Name="btnLobby1" Content="Join Lobby 1" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Click="btnJoinLobby1_Click" />
        <Button Name="btnLobby2" Content="Join Lobby 2" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top" Click="btnJoinLobby2_Click" />
        <Button Name="btnLobby3" Content="Join Lobby 3" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Click="btnJoinLobby3_Click" />
        
    </Grid>
</Window>
