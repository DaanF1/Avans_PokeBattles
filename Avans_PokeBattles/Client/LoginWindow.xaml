<Window x:Class="Avans_PokeBattles.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avans_PokeBattles.Client"
        mc:Ignorable="d"
        Title="LoginWindow" Loaded="LoginWindow_Loaded" Height="200" Width="300">
    <Grid>
        <TextBox x:Name="txtName" Margin="0,0,0,101" TextWrapping="Wrap" HorizontalAlignment="Center" Width="120" Height="19" VerticalAlignment="Bottom" Text="Enter your name..." PreviewMouseDown="txtName_MouseDown"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,132,0,0" Width="188" Height="26" VerticalAlignment="Top" Click="btnLogin_Clicked"/>

    </Grid>
</Window>
